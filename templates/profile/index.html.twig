{% extends 'user.html.twig' %}

{% block title %}
	Profile page
{% endblock %}

{% block body %}
	<!-- component -->
		<div class="container lg:w-2/6 xl:w-2/7 sm:w-full md:w-2/3 bg-white shadow-lg transform duration-200 easy-in-out">
			<div class="h-32 overflow-hidden rounded-t-xl">
				<img class="w-full" src="{{ app.user.coverPath }}" alt=""/>
			</div>
			<div class="flex justify-center px-5 -mt-12">
				<img class="h-32 w-32 bg-white p-2 rounded-full" src="{{ app.user.photo }}" alt="{{ app.user.fullname}}"/>
			</div>
			<div class="">
				<div class="text-center px-14">
					<h2 class="text-gray-800 text-3xl font-bold">{{ app.user.fullname }}</h2>
					<a class="text-gray-400 mt-2 hover:text-blue-500" href="https://www.google.com" target="_blank">@{{ app.user.username }}</a>
					<p class="mt-2 text-gray-500 text-sm">{{ app.user.bio}}</p> 
				</div>
				<hr class="mt-6"/>
				<div class="flex bg-gray-50 ">
					<div class="text-center w-1/2 p-4 hover:bg-gray-100 cursor-pointer">
						<p>Edit my profile</p>
					</div>
					<div class="border"></div>
					<div class="text-center w-1/2 p-4 hover:bg-gray-100 cursor-pointer">
						<p>Settings &amp; Privacy</p>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
